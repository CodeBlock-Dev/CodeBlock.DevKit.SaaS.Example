@using HeyItIsMe.Application.Dtos.Questions

<div class="table-responsive text-nowrap">
    <table class="table table-hover mt-3">
        <thead>
            <tr class="f-sm">
                <th scope="col"></th>
                <th scope="col">@CoreLocalizer[CoreResource.Row_Number]</th>
                <th scope="col">@SharedLocalizer[SharedResource.Fact_Content]</th>
                <th scope="col">@SharedLocalizer[SharedResource.Question_Order]</th>
                <th scope="col">@CoreLocalizer[CoreResource.CreateDateTime]</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-5">
                        @CoreLocalizer[CoreResource.No_Items_Found]
                    </td>
                </tr>
            }
            else
            {
                int row = 0;
                foreach (var item in Model)
                {
                    <tr class="f-sm cursor-pointer" @onclick="@(()=>ShowUpdateModal(item.Id))">
                        <td> <span><i class="bi bi-box-arrow-right text-primary"></i></span></td>
                        <td>@(++row)</td>
                        <td>@item.Content.Substring(0,20) ...</td>
                        <td>@item.Order</td>
                        <td class="f-xs">@item.CreationTime.FullDateLongTime</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public IEnumerable<GetQuestionDto> Model { get; set; }

    protected virtual void ShowUpdateModal(string id)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(UpdateQuestion.QuestionId), id);
        ModalService.Show<UpdateQuestion>(AdminPanelLocalizer[AdminPanelResource.UpdateQuestion], parameters, new ModalOptions { Class = "blazored-modal width-xs-90 width-md-50" });
    }
} 