@using CodeBlock.DevKit.Web.Blazor.Server.Attributes
@using HeyItIsMe.Application.Helpers
@inherits CustomNavMenu
@attribute [ReplaceBaseComponent]

<div class="nav-item">
    <a class="ms-1 text-decoration-none d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#demo-menu-group" role="button" aria-expanded="false" aria-controls="demo-menu-group">
        <div class="d-flex align-items-center">
            <span class="bi bi-tv p-1" aria-hidden="true"></span>
            @AdminPanelLocalizer[AdminPanelResource.Pages]
        </div>
        <span class="me-2 collapse-arrow bi bi-chevron-down"></span>
    </a>

    <div class="collapse" id="demo-menu-group">

        @if (CurrentUser.HasPermission(Permissions.Page.PAGES))
        {
            <div class="nav-item">
                <NavLink @onclick="base.HandleNavItemClicked" class="nav-link ms-2" href="/pages">
                    <span class="bi bi-pip p-1" aria-hidden="true"></span> @AdminPanelLocalizer[AdminPanelResource.Pages]
                </NavLink>
            </div>
        }

        @if (CurrentUser.HasPermission(Permissions.Question.QUESTIONS))
        {
            <div class="nav-item">
                <NavLink @onclick="base.HandleNavItemClicked" class="nav-link ms-2" href="/questions">
                    <span class="bi bi-question-square p-1" aria-hidden="true"></span> @AdminPanelLocalizer[AdminPanelResource.Questions]
                </NavLink>
            </div>
        }

    </div>
</div>
