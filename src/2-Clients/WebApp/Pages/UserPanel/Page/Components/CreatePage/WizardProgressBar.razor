<div class="wizard-progress mb-4">
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: @(ProgressPercentage)%" 
             aria-valuenow="@CurrentStep" aria-valuemin="0" aria-valuemax="7"></div>
    </div>
    <div class="progress-text text-center mt-2">
        <small class="text-muted">Step @CurrentStep of 7</small>
    </div>
</div>

@code {
    [Parameter] public int CurrentStep { get; set; }
    [Parameter] public double ProgressPercentage { get; set; }
}
